DirectoryIndex index.php index.html
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase   /

RewriteRule ^modules/(.*)/(.*)$ /module.php?sfmodname=$1&sfaction=$2&%{QUERY_STRING}
RewriteRule ^popups/(.*)$ /popup_modal.php?modalname=$1&%{QUERY_STRING}

</IfModule>
  
  SetEnv radria 1

