  <Files ~ "\.ftp\.prj$">
    Order allow,deny
    Deny from all
  </Files>
  <Files ~ "\.inc\.php$">
    Order allow,deny
    Deny from all
  </Files>
  <Files ~ "\.class\.php$">
    Order allow,deny
    Deny from all
  </Files>
  <Files ~ ".log$">
    Order allow,deny
    Deny from all
  </Files>
  <Files ~ "\.xml$">
    Order allow,deny
    Deny from all
  </Files>

